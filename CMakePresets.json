{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
        "name": "RelWithDebInfo",
        "hidden": false,
        "description": "Basic RelWithDebInfo, with nothing special.",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "RelWithDebInfo",
            "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
        }
    },
    {
        "name": "RelWithDebInfo-gpu",
        "hidden": false,
        "description": "Configure for CUDA support.",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "RelWithDebInfo",
            "AX_ENABLE_CUDA": "ON",
            "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
        }
    },
    {
        "name": "Debug",
        "hidden": false,
        "description": "Basic Debug, with nothing special.",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
        }
    },
    {
        "name": "Debug-gpu",
        "hidden": false,
        "description": "Configure for CUDA support.",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "AX_ENABLE_CUDA": "ON",
            "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
        }
    }
  ],
  "buildPresets": [
    {
        "name": "RelWithDebInfo",
        "description": "Build RelWithDebInfo",
        "configurePreset": "RelWithDebInfo"
    },
    {
        "name": "RelWithDebInfo-gpu",
        "description": "Build RelWithDebInfo with CUDA support",
        "configurePreset": "RelWithDebInfo-gpu"
    },
    {
        "name": "Debug",
        "description": "Build Debug",
        "configurePreset": "Debug"
    },
    {
        "name": "Debug-gpu",
        "description": "Build Debug with CUDA support",
        "configurePreset": "Debug-gpu"
    }
  ]
}